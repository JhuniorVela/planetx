@model WeatherData
@{
    ViewData["Title"] = "Clima";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    /* Estilos principales para la vista de clima */
    .weather-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
    }

    .weather-header {
        text-align: center;
        margin-bottom: 40px;
        padding: 20px;
        background: rgba(26, 26, 46, 0.5);
        border-radius: 15px;
        border: 1px solid rgba(100, 255, 218, 0.2);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        animation: fade-in-up 0.8s ease-out;
    }

    .weather-header h1 {
        font-size: 2.8rem;
        margin-bottom: 15px;
        background: linear-gradient(135deg, #64ffda 0%, #00bcd4 50%, #2196f3 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 15px rgba(100, 255, 218, 0.3);
        font-family: 'Audiowide', sans-serif;
    }

    .weather-header p {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.8);
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .search-section {
        background: rgba(26, 26, 46, 0.7);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 40px;
        border: 1px solid rgba(100, 255, 218, 0.2);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        animation: fade-in-up 0.8s ease-out 0.2s forwards;
        opacity: 0;
    }

    .search-form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .search-form label {
        font-size: 1.4rem;
        color: #64ffda;
        font-weight: 500;
        margin-bottom: 20px;
        font-family: 'Audiowide', sans-serif;
    }

    .search-input {
        display: flex;
        width: 100%;
        max-width: 500px;
        gap: 15px;
    }

    .search-form input[type="text"] {
        flex: 1;
        background: rgba(10, 10, 20, 0.8);
        border: 1px solid rgba(100, 255, 218, 0.3);
        border-radius: 8px;
        padding: 15px;
        color: white;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

    .search-form input[type="text"]:focus {
        outline: none;
        border-color: #64ffda;
        box-shadow: 0 0 15px rgba(100, 255, 218, 0.3);
    }

    .search-form button {
        background: linear-gradient(135deg, #64ffda 0%, #00bcd4 100%);
        border: none;
        border-radius: 8px;
        padding: 0 30px;
        color: #0a192f;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 1.1rem;
    }

    .search-form button:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(100, 255, 218, 0.4);
    }

    .weather-card {
        background: rgba(26, 26, 46, 0.7);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 30px;
        margin-top: 20px;
        border: 1px solid rgba(100, 255, 218, 0.2);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        animation: fade-in-up 0.8s ease-out 0.4s forwards;
        opacity: 0;
    }

    .weather-location {
        text-align: center;
        margin-bottom: 30px;
    }

    .weather-location h2 {
        font-size: 2.2rem;
        color: #64ffda;
        margin-bottom: 5px;
        font-family: 'Audiowide', sans-serif;
    }

    .weather-location p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.1rem;
    }

    .weather-main {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        margin-bottom: 30px;
    }

    .temperature-container {
        flex: 1;
        min-width: 250px;
        text-align: center;
        padding: 20px;
        background: rgba(10, 10, 20, 0.5);
        border-radius: 15px;
    }

    .temperature-value {
        font-size: 4rem;
        font-weight: 700;
        background: linear-gradient(135deg, #64ffda 0%, #00bcd4 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
        margin: 20px 0;
    }

    .temperature-unit {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .weather-icon {
        font-size: 5rem;
        margin: 20px 0;
        color: #64ffda;
    }

    .weather-description {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.9);
        text-transform: capitalize;
    }

    .weather-details {
        flex: 1;
        min-width: 250px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .detail-card {
        background: rgba(10, 10, 20, 0.5);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s ease;
    }

    .detail-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(100, 255, 218, 0.2);
    }

    .detail-icon {
        font-size: 2rem;
        color: #64ffda;
        margin-bottom: 15px;
    }

    .detail-label {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.95rem;
        margin-bottom: 5px;
    }

    .detail-value {
        font-size: 1.4rem;
        font-weight: 600;
        color: white;
    }

    .sun-times {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-top: 30px;
        padding-top: 30px;
        border-top: 1px solid rgba(100, 255, 218, 0.1);
    }

    .sun-time {
        text-align: center;
    }

    .sun-icon {
        font-size: 2.5rem;
        color: #ffd700;
        margin-bottom: 10px;
    }

    .sun-label {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 5px;
    }

    .sun-value {
        font-size: 1.2rem;
        font-weight: 500;
        color: white;
    }

    .no-data {
        text-align: center;
        padding: 50px;
        color: rgba(255, 255, 255, 0.6);
    }

    .no-data i {
        font-size: 3rem;
        margin-bottom: 20px;
        color: rgba(100, 255, 218, 0.5);
    }

    /* Animaciones */
    @@keyframes fade-in-up {
        0% {
            opacity: 0;
            transform: translateY(30px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .weather-header h1 {
            font-size: 2.2rem;
        }

        .search-input {
            flex-direction: column;
        }

        .search-form button {
            width: 100%;
            justify-content: center;
            padding: 15px;
        }

        .temperature-value {
            font-size: 3rem;
        }
    }
</style>

<div class="weather-container">
    <div class="weather-header">
        <h1><i class="fas fa-cloud-sun"></i> Pronóstico Planetario</h1>
        <p>Consulta las condiciones climáticas actuales en cualquier lugar de la Tierra con nuestro sistema de monitoreo atmosférico avanzado</p>
    </div>

    <div class="search-section">
        <form method="post" action="Clima" class="search-form">
            <label for="city">INGRESA UNA CIUDAD</label>
            <div class="search-input">
                <input type="text" name="city" id="city" required placeholder="Ej: Madrid, Tokyo, New York">
                <button type="submit">
                    <i class="fas fa-search"></i> CONSULTAR
                </button>
            </div>
        </form>
    </div>

    @if (Model != null)
    {
        <div class="weather-card">
            <div class="weather-location">
                <h2>@ViewBag.City</h2>
                <p>@Model.Sys.Country</p>
            </div>

            <div class="weather-main">
                <div class="temperature-container">
                    @foreach (var tiempo in Model.Weather)
                    {
                        <div class="weather-icon">
                            @if (tiempo.Main.Contains("Cloud"))
                            {
                                <i class="fas fa-cloud"></i>
                            }
                            else if (tiempo.Main.Contains("Rain"))
                            {
                                <i class="fas fa-cloud-rain"></i>
                            }
                            else if (tiempo.Main.Contains("Clear"))
                            {
                                <i class="fas fa-sun"></i>
                            }
                            else if (tiempo.Main.Contains("Snow"))
                            {
                                <i class="fas fa-snowflake"></i>
                            }
                            else
                            {
                                <i class="fas fa-cloud-sun"></i>
                            }
                        </div>
                        <div class="weather-description">@tiempo.Description</div>
                    }
                    <div class="temperature-value">@Model.Main.Temp</div>
                    <div class="temperature-unit">°C</div>
                </div>

                <div class="weather-details">
                    <div class="detail-card">
                        <div class="detail-icon">
                            <i class="fas fa-tint"></i>
                        </div>
                        <div class="detail-label">HUMEDAD</div>
                        <div class="detail-value">@Model.Main.Humidity%</div>
                    </div>

                    <div class="detail-card">
                        <div class="detail-icon">
                            <i class="fas fa-wind"></i>
                        </div>
                        <div class="detail-label">VIENTO</div>
                        <div class="detail-value">@Model.Wind.Speed m/s</div>
                    </div>

                    <div class="detail-card">
                        <div class="detail-icon">
                            <i class="fas fa-compress-alt"></i>
                        </div>
                        <div class="detail-label">PRESIÓN</div>
                        <div class="detail-value">@Model.Main.Pressure hPa</div>
                    </div>

                    <div class="detail-card">
                        <div class="detail-icon">
                            <i class="fas fa-cloud"></i>
                        </div>
                        <div class="detail-label">NUBOSIDAD</div>
                        <div class="detail-value">@Model.Clouds.All%</div>
                    </div>

                    <div class="detail-card">
                        <div class="detail-icon">
                            <i class="fas fa-mountain"></i>
                        </div>
                        <div class="detail-label">PRESIÓN SNM</div>
                        <div class="detail-value">@Model.Main.SeaLevel hPa</div>
                    </div>

                    <div class="detail-card">
                        <div class="detail-icon">
                            <i class="fas fa-layer-group"></i>
                        </div>
                        <div class="detail-label">PRESIÓN SUELO</div>
                        <div class="detail-value">@Model.Main.GrndLevel hPa</div>
                    </div>
                </div>
            </div>

            <div class="sun-times">
                <div class="sun-time">
                    <div class="sun-icon">
                        <i class="fas fa-sunrise"></i>
                    </div>
                    <div class="sun-label">AMANECER</div>
                    <div class="sun-value">@Model.Sys.Sunrise UTC</div>
                </div>

                <div class="sun-time">
                    <div class="sun-icon">
                        <i class="fas fa-sunset"></i>
                    </div>
                    <div class="sun-label">ATARDECER</div>
                    <div class="sun-value">@Model.Sys.Sunset UTC</div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="weather-card">
            <div class="no-data">
                <i class="fas fa-globe-americas"></i>
                <h3>Consulta el Clima Planetario</h3>
                <p>Ingresa el nombre de una ciudad para obtener información meteorológica</p>
            </div>
        </div>
    }
</div>


